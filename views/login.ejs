<%- include('./partial/header') %>

    <div class="w-full h-screen flex justify-center items-center bg-zinc-300">
        <div class="w-1/2 max-w-md px-8">
            <h4 class="text-2xl capitalize mb-2">login your account</h4>
            <p class="mt-2 text-gray-600 mb-3">
                Don't have an account?
                <a href="/" class="text-blue-500 hover:text-blue-600">Register here</a>
            </p>
            <form autocomplete="off" action="/user/login" method="post">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="email" placeholder="Email" name="email">
                <input class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200"
                    type="password" placeholder="Password" name="password">
                <input class="px-5 block rounded-full py-3 mt-2 bg-blue-500 text-white items-center" type="submit" value="Login">
            </form>
        </div>
    </div>

    <%- include('./partial/footer') %>